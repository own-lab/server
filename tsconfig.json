{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@home-lab/server/core/*": [
        "libs/core/src/*"
      ],
      "@home-lab/server/shared/*": [
        "libs/shared/src/*"
      ]
    }
  }
}